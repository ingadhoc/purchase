<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_view" model="ir.ui.view">
        <field name="name">purchase_order_view.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="priority" eval="9"/>
        <field name="arch" type="xml">
            <button name="action_view_invoice" position="after">
                <button name="add_products_to_quotation" type="object" string="Search Products"  icon="fa-cart-plus" invisible="state != 'draft' or state != 'sent'"/>
            </button>
        </field>
    </record>
</odoo>
